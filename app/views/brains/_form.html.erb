<%= nested_form_for(@brain, multipart:true) do |f| %>
  <% if @brain.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@brain.errors.count, "error") %> prohibited this brain from being saved:</h2>

      <ul>
      <% @brain.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_area :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_area :email %>
  </div>
  <div class="field">
    <%= f.label :date %><br>
    <%= f.text_area :date %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>

<%= f.fields_for :photos do |photo_form| %>
<%= image_tag(photo_form.object.image, width:50) %>
  <%= photo_form.file_field :image %>
  <%= photo_form.link_to_remove "Remove this task" %>
<% end %>
<p><%= f.link_to_add "Add a task", :photos %></p>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
